{
  "name": "commissary",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "auth:generate": "bunx --bun @better-auth/cli generate --config ./auth.config.ts --output ./drizzle/schema/auth.new.ts",
    "clean-install": "rimraf --glob **/node_modules bun.lock && bun install --no-cache",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "format": "biome format --write",
    "lint:fix": "biome lint --write",
    "lint": "biome lint",
    "type-check": "tsc && turbo run type-check"
  },
  "dependencies": {
    "@better-auth/stripe": "^1.3.6",
    "alchemy": "^0.61.0",
    "better-auth": "^1.3.6",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "postgres": "^3.4.7",
    "stripe": "^18.4.0",
    "superjson": "^2.2.2",
    "zod": "^4.0.17",
    "zod-openapi": "^5.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@cloudflare/workers-types": "^4.20250813.0",
    "@neondatabase/api-client": "^2.2.0",
    "@types/bun": "^1.2.20",
    "commander": "^14.0.0",
    "drizzle-kit": "^0.31.4",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.2.19",
  "trustedDependencies": [
    "@swc/core",
    "esbuild",
    "sharp",
    "workerd"
  ]
}
